{
  "name": "@fractal-mcp/oai-hooks",
  "version": "2.2.5",
  "description": "React hooks for building OpenAI Apps SDK compatible widget UIs",
  "repository": {
    "type": "git",
    "url": "https://github.com/fractal-mcp/sdk.git"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "echo 'no tests'",
    "release": "npm view \"$npm_package_name@$npm_package_version\" version >/dev/null 2>&1 && echo \"Skipping publish: $npm_package_name@$npm_package_version exists\" || npm publish --access public"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@fractal-mcp/oai-types": "2.2.5"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
